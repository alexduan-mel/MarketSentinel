{
    "meta": {
        "name": "SentinelStream Tokens",
        "version": "1.0.0",
        "updated_at": "2026-02-26",
        "notes": "Institutional dark theme tokens for React + Tailwind implementation."
    },
    "colors": {
        "bg": {
            "primary": "#0B1020",
            "surface": "#111A2E",
            "elevated": "#16213A",
            "overlay": "rgba(0,0,0,0.55)"
        },
        "border": {
            "default": "#22304A",
            "subtle": "#1A2740"
        },
        "text": {
            "primary": "#E7ECF4",
            "secondary": "#A8B3C7",
            "muted": "#7F8AA3",
            "disabled": "#5D667C",
            "inverse": "#0B1020"
        },
        "semantic": {
            "positive": "#22C55E",
            "negative": "#EF4444",
            "warning": "#F59E0B",
            "info": "#38BDF8",
            "neutral": "#94A3B8"
        },
        "state": {
            "hover": "rgba(231,236,244,0.06)",
            "active": "rgba(231,236,244,0.10)",
            "selected": "rgba(56,189,248,0.12)",
            "focusRing": "rgba(56,189,248,0.45)"
        }
    },
    "typography": {
        "fontFamily": {
            "sans": [
                "Inter",
                "ui-sans-serif",
                "system-ui",
                "Segoe UI",
                "Roboto",
                "Helvetica",
                "Arial",
                "sans-serif"
            ],
            "mono": [
                "JetBrains Mono",
                "ui-monospace",
                "SFMono-Regular",
                "Menlo",
                "Monaco",
                "Consolas",
                "Liberation Mono",
                "monospace"
            ]
        },
        "textStyles": {
            "h1": {
                "fontSize": 28,
                "lineHeight": 36,
                "fontWeight": 600,
                "letterSpacing": -0.2
            },
            "h2": {
                "fontSize": 20,
                "lineHeight": 28,
                "fontWeight": 600,
                "letterSpacing": -0.1
            },
            "h3": {
                "fontSize": 16,
                "lineHeight": 24,
                "fontWeight": 600,
                "letterSpacing": 0
            },
            "body": {
                "fontSize": 14,
                "lineHeight": 20,
                "fontWeight": 400,
                "letterSpacing": 0
            },
            "label": {
                "fontSize": 12,
                "lineHeight": 16,
                "fontWeight": 600,
                "letterSpacing": 0.2
            },
            "caption": {
                "fontSize": 12,
                "lineHeight": 16,
                "fontWeight": 400,
                "letterSpacing": 0.2
            },
            "mono": {
                "fontSize": 12,
                "lineHeight": 16,
                "fontWeight": 500,
                "letterSpacing": 0.1
            }
        }
    },
    "spacing": {
        "scalePx": [
            4,
            8,
            12,
            16,
            20,
            24,
            32,
            40,
            48,
            64
        ],
        "page": {
            "paddingX": 24,
            "paddingXSm": 16,
            "sectionGap": 32
        },
        "card": {
            "padding": 24,
            "paddingCompact": 16,
            "gap": 12
        },
        "table": {
            "cellPaddingY": 12,
            "cellPaddingX": 16,
            "rowGap": 8
        }
    },
    "radii": {
        "sm": 8,
        "md": 12,
        "lg": 16,
        "pill": 999
    },
    "shadows": {
        "sm": "0 1px 2px rgba(0,0,0,0.25)",
        "md": "0 8px 20px rgba(0,0,0,0.35)"
    },
    "zIndex": {
        "base": 0,
        "sticky": 10,
        "dropdown": 20,
        "drawer": 30,
        "modal": 40,
        "toast": 50
    },
    "motion": {
        "durationMs": {
            "fast": 120,
            "base": 180,
            "slow": 240
        },
        "easing": {
            "standard": "cubic-bezier(0.2, 0, 0, 1)"
        }
    },
    "thresholds": {
        "signal": {
            "highConfidence": 0.8,
            "newWithinMinutes": 30
        }
    }
}